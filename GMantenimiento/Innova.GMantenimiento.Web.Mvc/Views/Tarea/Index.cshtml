@model IEnumerable<GMSTp2.DataModel.Tarea>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div class="content-body">
    <div class="breadcrumbs">
        :: Usted se encuentra en: <span>TAREAS DE MANTENIMIENTO</span><span class="nivel-bread">/</span><span class="active-view">BÚSQUEDA</span>
    </div>
    <div class="main-colum">
        <!-- wrap -->
        <div class="box-wrap-main">
            <div class="box-wrap-header">
                <div class="pull-left">
                    <div class="title-main">
                        MANTENIMIENTO DE TAREA
                    </div>
                </div>
                <div class="pull-right">
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="box-wrap-body">
                    <h3 class="title-form">FILTROS DE BÚSQUEDA</h3>
                    <div class="box-form">
                        <div class="row">
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label>Criterio de Búsqueda:</label>

                                    @Html.TextBox("valor",null, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="box-acciones">
                        <div class="col-xs-4">
                            <!-- alerta -->
                            <div class="alert-custom" style="display:none;">
                                <div class="alert alert-danger" role="alert">
                                    <i class="fa fa-warning"></i>Error: Debe seleccionar al menos un filtro
                                </div>
                            </div>
                        </div>
                        <div class="pull-right">
                            <input type="submit" class="btn-s btn-search" value="Buscar"> 
                            @Html.ActionLink(
             "Listado",                                                  // linkText
             "ReporteListadoTarea",                                    // actionName
             "Tarea",
             null)


                        </div>
                    </div>
                    
                    <div class="grilla-pag">
                        <div class="pull-left">
                            <h3 class="title-grilla">RESULTADOS</h3>
                        </div>
                        <div class="pull-right">
                            <div class="paginacion">
                                <input type="button" value="" class="btn-anterior">
                                <span class="list-cantidad">( 1-20 de 20 )</span>
                                <input type="button" value="" class="btn-siguiente">
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover text-center text-middle">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NomTarea)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AbrevTarea)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody >
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NomTarea)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AbrevTarea)
                                    </td>
                                    <td>
                                        @Html.ActionLink("EDITAR", "Edit", new { id = item.CodTarea }) | 
                                        @Html.ActionLink("ELIMINAR", "Delete", new { id = item.CodTarea })
                                    </td>
                                </tr>
                            }

                            </tbody>
                        </table>
                    </div>
                </div>
            }
            </div>
        <!-- cierra wrap -->
        </div>
    </div>
